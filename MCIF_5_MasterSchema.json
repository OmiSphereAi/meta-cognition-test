        {
          "id": "p1_1",
          "type": "text",
          "question": "Choose an everyday object and describe it as if seen for the first time. Focus on color, texture, sound, and feeling.",
          "hints": ["Notice what stands out first.", "Avoid naming; describe experience."],
          "expected_response": "Detailed sensory and emotional description."
        },
        {
          "id": "p1_2",
          "type": "slider",
          "question": "How vividly can you imagine new sensory details right now?",
          "scale": { "min": 0, "max": 100, "labels": ["Dim", "Vivid"] }
        },
        {
          "id": "p1_3",
          "type": "multiple_choice",
          "question": "When observing something new, which comes first for you?",
          "options": ["Feeling", "Thinking", "Naming", "Imagining"],
          "scoring_map": {
            "Feeling": 25,
            "Thinking": 20,
            "Naming": 15,
            "Imagining": 30
          }
        }
      ],
      "scoring": {
        "detail": 50,
        "sensory_emotion_link": 25,
        "concept_depth": 25
      }
    },

