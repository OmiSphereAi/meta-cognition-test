        {
          "id": "p2_1",
          "type": "text",
          "question": "A team keeps missing deadlines. Without saying 'work harder,' design a sustainable solution.",
          "expected_response": "Solution-based reasoning that balances structure and motivation."
        },
        {
          "id": "p2_2",
          "type": "slider",
          "question": "How well do you structure your thoughts before speaking?",
          "scale": { "min": 0, "max": 100, "labels": ["Spontaneous", "Highly Structured"] }
        },
        {
          "id": "p2_3",
          "type": "multiple_choice",
          "question": "Which most resembles your natural problem-solving style?",
          "options": [
            "Step-by-step logical analysis",
            "Intuitive insight and pattern leaps",
            "Emotional empathy-based resolution",
            "System mapping and interconnection"
