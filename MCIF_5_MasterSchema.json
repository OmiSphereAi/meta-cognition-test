{
  "schemaVersion": "5.0",
  "codename": "Mind Core",
  "title": "MCIF v5 — Meta-Cognitive Intelligence Framework",
  "author": "Andrew Carr + GPT-5 Collaboration",
  "description": "Comprehensive schema for MCIF v5.0 — phases, questions, scoring, archetypes, UI hooks, and export metadata.",
  "lastUpdated": "2025-10-29",
  "license": "Open for research and education; credit MCIF v5",
  "ui": {
    "lucidFlow": true,
    "frequencyOptions": [432, 528, 852, 963],
    "showFrequencyControl": true,
    "defaultFrequency": 432,
    "accessibility": {
      "textSizes": ["base", "large", "xlarge"],
      "contrastFriendly": true
    }
  },
  "phases": [
    {
      "id": "phase1",
      "title": "Perceptual Awareness",
      "name": "Perceptual Awareness",
      "order": 1,
      "description": "Measures sensory acuity, detail noticing, and the ability to link sensation to meaning.",
      "estimated_time_minutes": 10,
      "scoring_weights": {
        "Detail": 0.5,
        "SensoryEmotionLink": 0.3,
        "ConceptDepth": 0.2
      },
      "questions": [
        {
          "id": "P1-Q1",
          "type": "text",
          "prompt": "Choose an everyday object and describe it as if perceived for the first time. Focus on texture, light, temperature, and the feeling it evokes.",
          "ui": {
            "placeholder": "Describe in sensory-rich detail...",
            "minimal_length": 60,
            "hint": "List at least three sensory aspects (sight, touch, sound, smell, temperature)."
          },
          "meta": {
            "Depth": 0.6,
            "Clarity": 0.3,
            "Originality": 0.1
          }
        },
        {
          "id": "P1-Q2",
          "type": "slider",
          "prompt": "On a scale from 0–100, how aware are you of subtle sensory changes in your environment (like light shift, background hum, temperature)?",
          "min": 0,
          "max": 100,
          "default": 50,
          "ui": {
            "labelLeft": "Not aware",
            "labelRight": "Extremely aware",
            "hint": "Slide to indicate general sensory attunement."
          },
          "meta": {
            "Detail": 0.7,
            "SelfAwareness": 0.3
          }
        },
        {
          "id": "P1-Q3",
          "type": "multiple_choice",
          "prompt": "When you first notice a new sensory detail, what do you usually do?",
          "options": [
            { "id": "p1q3o1", "label": "Hold attention and observe", "score": 3 },
            { "id": "p1q3o2", "label": "Name it and move on", "score": 2 },
            { "id": "p1q3o3", "label": "Ignore it unless it matters", "score": 1 },
            { "id": "p1q3o4", "label": "React emotionally before analyzing", "score": 2 }
          ],
          "meta": {
            "Detail": 0.4,
            "SensoryEmotionLink": 0.4,
            "Clarity": 0.2
          },
          "ui": {
            "layout": "stacked",
            "hint": "Choose the behavior that best matches your pattern."
          }
        },
        {
          "id": "P1-Q4",
          "type": "text",
          "prompt": "Give a short example of a time you noticed a small detail that changed your understanding of a situation.",
          "ui": {
            "placeholder": "Briefly describe the moment and the shift in understanding (2–4 sentences).",
            "minimal_length": 40
          },
          "meta": {
            "Depth": 0.5,
            "Clarity": 0.3,
            "SelfAwareness": 0.2
          }
        }
      ]
    },
    {
      "id": "phase2",
      "title": "Cognitive Mechanics",
      "name": "Cognitive Mechanics",
      "order": 2,
      "description": "Tests logical flow, pattern recognition, and systems thinking in practical contexts.",
      "estimated_time_minutes": 15,
      "scoring_weights": {
        "Logic": 0.45,
        "SystemsThinking": 0.35,
        "PracticalCreativity": 0.2
      },
      "questions": [
        {
          "id": "P2-Q1",
          "type": "text",
          "prompt": "A team keeps missing deadlines. Without saying 'work harder,' design a sustainable process that fixes this problem. Describe roles, checkpoints, and feedback loops.",
          "ui": {
            "placeholder": "Outline process elements and reason for each step.",
            "minimal_length": 120,
            "hint": "Consider structural causes (communication, incentives, clarity)."
          },
          "meta": {
            "Logic": 0.5,
            "SystemsThinking": 0.4,
            "Originality": 0.1
          }
        },
        {
          "id": "P2-Q2",
          "type": "multiple_choice",
          "prompt": "When solving a complex problem you typically:",
          "options": [
            { "id": "p2q2o1", "label": "Break it into smaller pieces", "score": 3 },
            { "id": "p2q2o2", "label": "Look for analogies", "score": 2 },
            { "id": "p2q2o3", "label": "Prototype rapidly", "score": 3 },
            { "id": "p2q2o4", "label": "Wait for insight", "score": 1 }
          ],
          "meta": {
            "Logic": 0.5,
            "PracticalCreativity": 0.4,
            "Adaptability": 0.1
          },
          "ui": {
            "layout": "columns"
          }
        },
        {
          "id": "P2-Q3",
          "type": "slider",
          "prompt": "Rate your comfort with uncertainty when making a decision (0 = very uncomfortable, 100 = very comfortable).",
          "min": 0,
          "max": 100,
          "default": 50,
          "meta": {
            "Adaptability": 0.7,
            "Clarity": 0.3
          }
        },
        {
          "id": "P2-Q4",
          "type": "text",
          "prompt": "Describe a time you redesigned a routine or system that improved outcomes. What did you change and why?",
          "ui": {
            "placeholder": "Explain changes, measurable outcomes, and reasoning.",
            "minimal_length": 80
          },
          "meta": {
            "Logic": 0.4,
            "SystemsThinking": 0.4,
            "PracticalCreativity": 0.2
          }
        }
      ]
    },
    {
      "id": "phase3",
      "title": "Emotive Intelligence",
      "name": "Emotive Intelligence",
      "order": 3,
      "description": "Evaluates emotional literacy, causal understanding of feelings, and self-compassion.",
      "estimated_time_minutes": 12,
      "scoring_weights": {
        "EmotionalIdentification": 0.35,
        "CausalInsight": 0.45,
        "SelfCompassion": 0.2
      },
      "questions": [
        {
          "id": "P3-Q1",
          "type": "text",
          "prompt": "You feel anxious before a speech and start scrolling your phone. Why does this soothe you? Describe the short-term and long-term effects of that action.",
          "ui": {
            "placeholder": "Explain what shifts in attention and feeling occur.",
            "minimal_length": 80
          },
          "meta": {
            "EmotionalIdentification": 0.4,
            "CausalInsight": 0.4,
            "SelfCompassion": 0.2
          }
        },
        {
          "id": "P3-Q2",
          "type": "multiple_choice",
          "prompt": "When you notice a strong emotion, your first step is to:",
          "options": [
            { "id": "p3q2o1", "label": "Label the feeling", "score": 3 },
            { "id": "p3q2o2", "label": "Act to change it", "score": 2 },
            { "id": "p3q2o3", "label": "Observe silently", "score": 3 },
            { "id": "p3q2o4", "label": "Distract yourself", "score": 1 }
          ],
          "meta": {
            "EmotionalIdentification": 0.5,
            "SelfCompassion": 0.3,
            "Clarity": 0.2
          }
        },
        {
          "id": "P3-Q3",
          "type": "slider",
          "prompt": "How much do you typically forgive yourself after making a mistake? (0–100)",
          "min": 0,
          "max": 100,
          "default": 60,
          "meta": {
            "SelfCompassion": 0.8,
            "EmotionalIdentification": 0.2
          }
        },
        {
          "id": "P3-Q4",
          "type": "text",
          "prompt": "Describe a time when reframing an emotion changed what you did next.",
          "ui": {
            "placeholder": "Short narrative — what changed and how did you reframe?",
            "minimal_length": 60
          },
          "meta": {
            "CausalInsight": 0.5,
            "SelfCompassion": 0.3,
            "Clarity": 0.2
          }
        }
      ]
    },
    {
      "id": "phase4",
      "title": "Meta-Cognitive Insight",
      "name": "Meta-Cognitive Insight",
      "order": 4,
      "description": "Assesses awareness of one's own thought processes, ability to self-correct, and habit translation.",
      "estimated_time_minutes": 12,
      "scoring_weights": {
        "MetaAwareness": 0.45,
        "ProcessDiagnosis": 0.35,
        "RemedyClarity": 0.2
      },
      "questions": [
        {
          "id": "P4-Q1",
          "type": "text",
          "prompt": "You understand your patterns but rarely act on them. What blocks that conversion from insight to action?",
          "ui": {
            "placeholder": "Name internal and external barriers; propose micro-steps.",
            "minimal_length": 120
          },
          "meta": {
            "MetaAwareness": 0.4,
            "ProcessDiagnosis": 0.4,
            "RemedyClarity": 0.2
          }
        },
        {
          "id": "P4-Q2",
          "type": "multiple_choice",
          "prompt": "When given feedback you disagree with, you usually:",
          "options": [
            { "id": "p4q2o1", "label": "Reflect and test the feedback", "score": 3 },
            { "id": "p4q2o2", "label": "Defend your position", "score": 1 },
            { "id": "p4q2o3", "label": "Ask clarifying questions", "score": 3 },
            { "id": "p4q2o4", "label": "Ignore and proceed", "score": 1 }
          ],
          "meta": {
            "MetaAwareness": 0.5,
            "Adaptability": 0.3,
            "Clarity": 0.2
          }
        },
        {
          "id": "P4-Q3",
          "type": "slider",
          "prompt": "How frequently do you reflect on your decisions deliberately? (0 = never, 100 = daily)",
          "min": 0,
          "max": 100,
          "default": 40,
          "meta": {
            "MetaAwareness": 0.7,
            "ProcessDiagnosis": 0.3
          }
        },
        {
          "id": "P4-Q4",
          "type": "text",
          "prompt": "Pick an earlier answer you gave in this test. Re-describe it now with the perspective you have gained since beginning the test.",
          "ui": {
            "placeholder": "Quote original idea briefly then reframe.",
            "minimal_length": 80
          },
          "meta": {
            "MetaAwareness": 0.6,
            "Clarity": 0.3,
            "Adaptability": 0.1
          }
        }
      ]
    },
    {
      "id": "phase5",
      "title": "Creative Intelligence",
      "name": "Creative Intelligence",
      "order": 5,
      "description": "Measures originality, cross-domain integration, and translating insight into tangible constructs.",
      "estimated_time_minutes": 18,
      "scoring_weights": {
        "Novelty": 0.45,
        "Coherence": 0.3,
        "CrossDomainIntegration": 0.25
      },
      "questions": [
        {
          "id": "P5-Q1",
          "type": "text",
          "prompt": "Invent a new kind of intelligence measurement that could be more accurate than IQ. Explain what it measures, core metrics, and an example of how it's used.",
          "ui": {
            "placeholder": "Describe measurement, metrics, and a use case.",
            "minimal_length": 160
          },
          "meta": {
            "Novelty": 0.6,
            "Coherence": 0.3,
            "CrossDomainIntegration": 0.1
          }
        },
        {
          "id": "P5-Q2",
          "type": "multiple_choice",
          "prompt": "When asked to create, you prefer to:",
          "options": [
            { "id": "p5q2o1", "label": "Prototype quickly and iterate", "score": 3 },
            { "id": "p5q2o2", "label": "Plan thoroughly then build", "score": 2 },
            { "id": "p5q2o3", "label": "Collaborate and synthesize", "score": 3 },
            { "id": "p5q2o4", "label": "Work in solitude", "score": 1 }
          ],
          "meta": {
            "Novelty": 0.4,
            "CrossDomainIntegration": 0.4,
            "Clarity": 0.2
          },
          "ui": {
            "layout": "inline"
          }
        },
        {
          "id": "P5-Q3",
          "type": "slider",
          "prompt": "How often do you purposely combine two unrelated ideas to make something new? (0–100)",
          "min": 0,
          "max": 100,
          "default": 45,
          "meta": {
            "Novelty": 0.5,
            "CrossDomainIntegration": 0.5
          }
        },
        {
          "id": "P5-Q4",
          "type": "text",
          "prompt": "Give a short plan to turn one of your ideas into a 1-week prototype. Include constraints and measurable goals.",
          "ui": {
            "placeholder": "Include steps, metrics, and test criteria.",
            "minimal_length": 100
          },
          "meta": {
            "Coherence": 0.5,
            "PracticalCreativity": 0.3,
            "Depth": 0.2
          }
        }
      ]
    },
    {
      "id": "phase6",
      "title": "Philosophical Depth",
      "name": "Philosophical Depth",
      "order": 6,
      "description": "Explores abstract reasoning, worldview coherence, and existential clarity.",
      "estimated_time_minutes": 15,
      "scoring_weights": {
        "Depth": 0.45,
        "LogicalConsistency": 0.35,
        "ExistentialClarity": 0.2
      },
      "questions": [
        {
          "id": "P6-Q1",
          "type": "text",
          "prompt": "Is human potential fixed or ever-expanding? Justify your reasoning and describe practical implications for education and personal growth.",
          "ui": {
            "placeholder": "Argue a position with examples and counterpoints.",
            "minimal_length": 160
          },
          "meta": {
            "Depth": 0.5,
            "LogicalConsistency": 0.3,
            "ExistentialClarity": 0.2
          }
        },
        {
          "id": "P6-Q2",
          "type": "multiple_choice",
          "prompt": "Which appeals to you most when evaluating an ethical dilemma?",
          "options": [
            { "id": "p6q2o1", "label": "Consequences and outcomes", "score": 2 },
            { "id": "p6q2o2", "label": "Principles and duties", "score": 2 },
            { "id": "p6q2o3", "label": "Compassion and context", "score": 3 },
            { "id": "p6q2o4", "label": "Symbolic meanings and narratives", "score": 3 }
          ],
          "meta": {
            "LogicalConsistency": 0.4,
            "Depth": 0.3,
            "SelfAwareness": 0.3
          }
        },
        {
          "id": "P6-Q3",
          "type": "slider",
          "prompt": "How comfortable are you with holding two opposing ideas simultaneously and integrating them? (0–100)",
          "min": 0,
          "max": 100,
          "default": 50,
          "meta": {
            "Depth": 0.5,
            "Adaptability": 0.5
          }
        },
        {
          "id": "P6-Q4",
          "type": "text",
          "prompt": "Create a short metaphor that describes the structure of human thought. Explain why it fits.",
          "ui": {
            "placeholder": "Invent a metaphor and explain the mapping.",
            "minimal_length": 80
          },
          "meta": {
            "Novelty": 0.4,
            "Depth": 0.4,
            "Coherence": 0.2
          }
        }
      ]
    }
  ],
  "compositeMetrics": {
    "dimensions": [
      "Perception",
      "Logic & Reasoning",
      "Creativity",
      "Emotional Regulation",
      "Adaptability",
      "Meta-Awareness",
      "Philosophical Depth"
    ],
    "weights": {
      "Perception": 0.15,
      "Logic & Reasoning": 0.15,
      "Creativity": 0.15,
      "Emotional Regulation": 0.15,
      "Adaptability": 0.10,
      "Meta-Awareness": 0.15,
      "Philosophical Depth": 0.15
    },
    "total_points": 700,
    "tier_thresholds": {
      "Explorer": [0, 350],
      "Architect": [351, 525],
      "Visionary": [526, 700]
    },
    "calculation_notes": "Each phase normalizes to 0-100, then weighted by composite weights. Standard deviation across phase scores becomes Adaptability index."
  },
  "scoring": {
    "metrics": [
      "Depth",
      "Originality",
      "Clarity",
      "Self_Awareness",
      "Adaptability"
    ],
    "weighting_by_phase": {
      "Perceptual Awareness": { "Detail": 0.5, "SensoryEmotionLink": 0.3, "ConceptDepth": 0.2 },
      "Cognitive Mechanics": { "Logic": 0.45, "SystemsThinking": 0.35, "PracticalCreativity": 0.2 },
      "Emotive Intelligence": { "EmotionalIdentification": 0.35, "CausalInsight": 0.45, "SelfCompassion": 0.2 },
      "Meta-Cognitive Insight": { "MetaAwareness": 0.45, "ProcessDiagnosis": 0.35, "RemedyClarity": 0.2 },
      "Creative Intelligence": { "Novelty": 0.45, "Coherence": 0.3, "CrossDomainIntegration": 0.25 },
      "Philosophical Depth": { "Depth": 0.45, "LogicalConsistency": 0.35, "ExistentialClarity": 0.2 }
    },
    "tier_scaling": { "Explorer": 0.9, "Architect": 1.0, "Visionary": 1.15 },
    "normalization": "Scale each aggregated domain to 0–100. Sum weighted domains to composite total."
  },
